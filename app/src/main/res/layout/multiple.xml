<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PrinterPOCMultiple"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mad"
            android:hint="Prefix"
            android:id="@+id/prefix"
            android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Printer IP Address"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="IsDotMatrix Printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <EditText
            android:id="@+id/ipaddress"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:hint="IP Address KITCHEN HOT"
            android:text="@string/test_ipaddress2" />

        <CheckBox
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <EditText
            android:visibility="visible"
            android:hint="IP Address KITCHEN COLD"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ipaddress2"
            android:text="@string/test_ipaddress"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"/>

        <CheckBox
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <EditText
            android:hint="IP Address KITCHEN MISC"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ipaddress3"
            android:text="@string/test_ipaddress"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"/>

        <CheckBox
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <EditText
            android:visibility="visible"
            android:hint="IP Address BAR"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/ipaddress4"
            android:text="@string/test_ipaddress"
            android:layout_gravity="center_horizontal" android:layout_alignParentLeft="true"/>

        <CheckBox
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/printData"
        android:text="Print Data"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareData"
            android:text="share Data"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result"
            android:padding="20dp"
            android:text=""/>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
                android:text="Discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDiscover"
            android:layout_margin="@dimen/_20sdp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/discoverRes"
            android:padding="@dimen/_20sdp"
            />
        </ScrollView>
    </LinearLayout>
</LinearLayout>